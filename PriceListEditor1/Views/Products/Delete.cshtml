@model PriceListEditor1.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductCode)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductCode)</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="PriceLists" asp-route-id="@Model.PriceListId">Back to Price List</a>
    </form>
</div>
