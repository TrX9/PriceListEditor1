@model PriceListEditor1.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <input type="hidden" name="priceListId" value="@ViewBag.PriceList.Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            @foreach (var column in ViewBag.PriceList.Columns)
            {
                <div class="form-group">
                    <label class="control-label">@column.Name</label>
                    <input name="DynamicColumns[@column.Name]" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details" asp-controller="PriceLists" asp-route-id="@ViewBag.PriceList.Id">Back to Price List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
